@model Product

@{
    ViewData["Title"] = "Product Page";
}

<br>
<h2>
    <a href="/" class="link">Dashboard</a>
    | Products
    | <a href="/orders" class="link">Orders</a>
    | <a href="/customers" class="link">Customers</a>
</h2>
<hr>

<div class="row">
    <div class="col-4">
        <h4>Add a new product</h4>
        <form action="/addproduct" method="post">
            <div class="form-group">
                <label asp-for="ProductName">Name:</label>
                <input asp-for="ProductName" class="form-control" placeholder="name..."> 
                <span asp-validation-for="ProductName"></span>
            </div>
            <div class="form-group">
                <label asp-for="Image">Image(url):</label>
                <input asp-for="Image" class="form-control" placeholder="http://">
                <span asp-validation-for="Image"></span>
            </div>
            <div>
                <label asp-for="Description">Description:</label>
                <textarea asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description"></span>
            </div>
            <div class="form-group">
                <label asp-for="InitialQuantity">Initial Quantity:</label>
                <input asp-for="InitialQuantity" class="form-control" placeholder="1">
                <span asp-validation-for="InitialQuantity"></span>
            </div>
            <div class="form-group">
                <input class="btn btn-primary text-right" type="submit" value="Create">  
            </div>
        </form>
    </div>

    <div class="col-8">
        @foreach(var p in @ViewBag.AllProducts)
        {
            <div class="product">
                <img src="@p.Image" class="image">
                <p>@p.ProductName</p>
                <p>(@p.InitialQuantity left)</p>
            </div>
        }
    </div>
</div>
